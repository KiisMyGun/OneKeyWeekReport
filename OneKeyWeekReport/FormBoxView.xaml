<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneKeyWeekReport.FormBoxView"
             x:Name="this">
    <StackLayout Orientation="Horizontal">
        <!-- Organization 标签和输入框 -->
        <StackLayout Orientation="Horizontal" Margin="30,0,0,10" HorizontalOptions="FillAndExpand">
            <Label Text="Organization:" VerticalOptions="Center" />
            <Entry Placeholder="Enter Organization" Margin="10,0,0,0"  HorizontalOptions="FillAndExpand" x:Name="organizationEntry" Text="" />
            </StackLayout>
            <!-- Project 标签和输入框 -->
        <StackLayout Orientation="Horizontal" Margin="30,0,0,10" HorizontalOptions="FillAndExpand">
            <Label Text="Project:" VerticalOptions="Center" />
            <Entry Placeholder="Enter Project" Margin="10,0,0,0"  HorizontalOptions="FillAndExpand" x:Name="projectEntry" Text="" />
            </StackLayout>
            <!-- Token 标签和输入框 -->
        <StackLayout Orientation="Horizontal" Margin="30,0,0,10" HorizontalOptions="FillAndExpand">
            <Label Text="Token:" VerticalOptions="Center" />
            <Entry Placeholder="Enter Token" Margin="10,0,0,0"  HorizontalOptions="FillAndExpand" x:Name="tokenEntry" Text="" />
        </StackLayout>
    </StackLayout>
</ContentView>